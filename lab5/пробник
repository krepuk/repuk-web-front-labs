        }

        #blurValue, #brightnessValue, #contrastValue, #grayscaleValue, #hueRotateValue, #invertValue, #saturateValue {
            width: 100%;
        }

        #blurOutput, #brightnessOutput, #contrastOutput, #grayscaleOutput, #hueRotateOutput, #invertOutput, #saturateOutput {
            margin-left: 10px;
        }

        #blurImage, #brightnessImage, #contrastImage, #grayscaleImage, #hueRotateImage, #invertImage, #saturateImage {
            width: 500px;
            height: auto;
            margin-top: 20px;
        }
    </style>
